        \vspace{2ex}
        \Nir@PartNum

        \vfill

        \Nir@ManagerStamp

        \vspace{2ex}

        \Nir@IspStamp

        \vspace{2ex}

        \Nir@CtrlStamp

        \vspace{2ex}

        \Nir@ExecStamp

        \vfill

        \vfill

        \textbf{\Nir@Town~\Nir@Year}

    \end{centering}
